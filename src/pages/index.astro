---
import BaseHead from '../components/BaseHead.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import Header from '../components/Header.astro';
import InteractiveBackground from '../components/InteractiveBackground';
import HeroContent from '../components/HeroContent';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="m-0 overflow-hidden h-screen relative">
		<InteractiveBackground client:load />

		<!-- Header stays clickable -->
		<div class="relative z-20 pointer-events-auto">
			<Header />
		</div>

		<!-- HeroContent appears visually but does NOT block mouse input -->
		<div class="relative z-20 pointer-events-none">
			<HeroContent client:load />
		</div>
	</body>
</html>